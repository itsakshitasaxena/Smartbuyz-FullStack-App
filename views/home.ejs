<% layout('layouts/boilerplate') %>
<%- include('./partials/navbar') %>

<div class="container text-center mt-5">
    <h1 class="display-4 mb-4">Welcome to Shopping App</h1>
    <p class="lead mb-5">Shop smartly. Sell easily. Enjoy securely.</p>
    
    <a href="/login" class="btn btn-primary btn-lg mx-2">Login</a>
    <a href="/register" class="btn btn-success btn-lg mx-2">Sign Up</a>

    <hr class="my-5">

    <div class="row mt-5">
        <div class="col-md-4">
            <i class="fas fa-shopping-cart fa-3x mb-3"></i>
            <h4>Browse Products</h4>
            <p>Explore a variety of items from different categories.</p>
        </div>
        <div class="col-md-4">
            <i class="fas fa-user-plus fa-3x mb-3"></i>
            <h4>Easy Registration</h4>
            <p>Create an account and get started within seconds.</p>
        </div>
        <div class="col-md-4">
            <i class="fas fa-lock fa-3x mb-3"></i>
